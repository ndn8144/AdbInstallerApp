<UserControl x:Class="AdbInstallerApp.Views.MultiGroupInstallView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AdbInstallerApp.ViewModels"
             xmlns:converters="clr-namespace:AdbInstallerApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:IndexToNumberConverter x:Key="IndexToNumberConverter"/>
        
        <!-- Colors and Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1976D2"/>
        <SolidColorBrush x:Key="DeviceHeaderColor" Color="#E3F2FD"/>
        
        <!-- Font Families -->
        <FontFamily x:Key="SrotoneBold">Segoe UI</FontFamily>
        
        <!-- Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Foreground" Value="#9E9E9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E7D32"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- GroupBox Style -->
        <Style x:Key="ModernGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" 
                                    Background="#F5F5F5" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="4,4,0,0"
                                    Padding="8,4">
                                <ContentPresenter ContentSource="Header" 
                                                TextBlock.FontWeight="Bold"
                                                TextBlock.FontSize="14"/>
                            </Border>
                            <Border Grid.Row="1" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,0,1,1"
                                    CornerRadius="0,0,4,4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource DividerBrush}" BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Multi-Group APK Installation" 
                               FontSize="24" FontWeight="Bold" 
                               FontFamily="{StaticResource SrotoneBold}"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="{Binding CurrentStatus}" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Installation Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="🚀 Start Installation" 
                            Command="{Binding StartInstallationCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            Margin="0,0,10,0"
                            MinWidth="150"/>
                    <Button Content="⏹️ Cancel" 
                            Command="{Binding CancelInstallationCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="0,0,10,0"
                            MinWidth="100"/>
                    <Button Content="🔄 Refresh Groups" 
                            Command="{Binding RefreshAvailableGroupsCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            MinWidth="120"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Available Groups Panel -->
            <GroupBox Grid.Column="0" Header="📦 Available APK Groups" 
                      Style="{StaticResource ModernGroupBoxStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Group Selection Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Select All" 
                                Command="{Binding SelectAllGroupsCommand}"
                                Style="{StaticResource ModernButtonStyle}"
                                Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding AvailableGroups.Count, StringFormat=\{0\} groups available}" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <!-- Available Groups List -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding AvailableGroups}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Background="Transparent"
                             BorderThickness="1"
                             BorderBrush="{StaticResource DividerBrush}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource DividerBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Margin="2"
                                        Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding GroupName}" 
                                                       FontWeight="Medium"
                                                       FontSize="14"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding ApkCountText}" 
                                                       FontSize="11"
                                                       Foreground="{StaticResource AccentBrush}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="1" 
                                                Content="➕ Add"
                                                Command="{Binding DataContext.AddGroupToQueueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ModernButtonStyle}"
                                                FontSize="12"
                                                MinWidth="60"
                                                VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>

            <!-- Installation Queue Panel -->
            <GroupBox Grid.Column="2" Header="🎯 Installation Queue" 
                      Style="{StaticResource ModernGroupBoxStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Queue Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Clear Queue" 
                                Command="{Binding ClearQueueCommand}"
                                Style="{StaticResource ModernButtonStyle}"
                                Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding SelectedGroups.Count, StringFormat=\{0\} groups queued}" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <!-- Installation Queue List -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding SelectedGroups}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Background="Transparent"
                             BorderThickness="1"
                             BorderBrush="{StaticResource DividerBrush}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource DeviceHeaderColor}"
                                        BorderBrush="{StaticResource PrimaryBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Margin="2"
                                        Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource IndexToNumberConverter}}"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding GroupName}" 
                                                       FontWeight="Medium"
                                                       FontSize="14"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding ApkCountText}" 
                                                       FontSize="12"
                                                       Foreground="{StaticResource AccentBrush}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="2" 
                                                Content="❌"
                                                Command="{Binding DataContext.RemoveGroupFromQueueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ModernButtonStyle}"
                                                FontSize="12"
                                                Width="30"
                                                Height="30"
                                                VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Installation Options -->
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock Text="Installation Options:" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,5"/>
                        <CheckBox IsChecked="{Binding ReinstallEnabled}" 
                                  Content="Reinstall existing apps" 
                                  Margin="0,2"/>
                        <CheckBox IsChecked="{Binding GrantPermissions}" 
                                  Content="Grant all permissions" 
                                  Margin="0,2"/>
                        <CheckBox IsChecked="{Binding AllowDowngrade}" 
                                  Content="Allow version downgrade" 
                                  Margin="0,2"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Progress Section -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource DividerBrush}" BorderThickness="0,1,0,1"
                Padding="20,15"
                Visibility="{Binding IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Overall Progress -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Overall Progress" 
                                   FontWeight="Medium"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding CurrentStatus}" 
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" 
                               Text="{Binding ProgressText}" 
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <TextBlock Grid.Column="2" 
                               Text="{Binding EstimatedTimeRemaining}" 
                               FontSize="12"
                               Foreground="{StaticResource AccentBrush}"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Progress Bar -->
                <ProgressBar Grid.Row="1" 
                             Value="{Binding OverallProgress}" 
                             Maximum="100" 
                             Height="8" 
                             Margin="0,10,0,0"
                             Foreground="{StaticResource PrimaryBrush}"
                             Background="#E0E0E0"/>

                <!-- Current Details -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Current Group:" 
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding CurrentGroup}" 
                                   FontWeight="Medium"
                                   FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Current APK:" 
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding CurrentApk}" 
                                   FontWeight="Medium"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Progress Details Section -->
        <GroupBox Grid.Row="3" Header="📊 Installation Progress Details" 
                  Style="{StaticResource ModernGroupBoxStyle}"
                  Margin="10,0,10,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ProgressItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource DividerBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Margin="0,2"
                                    Padding="12,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Group Name -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding GroupName}" 
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>

                                    <!-- Progress Bar -->
                                    <StackPanel Grid.Column="1" Margin="10,0">
                                        <ProgressBar Value="{Binding Progress}" 
                                                     Maximum="100" 
                                                     Height="6"
                                                     Foreground="{StaticResource AccentBrush}"/>
                                        <TextBlock Text="{Binding Status}" 
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- Progress Text -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding ProgressText}" 
                                               FontFamily="Consolas"
                                               FontSize="12"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>

                                    <!-- Status Icon -->
                                    <TextBlock Grid.Column="3" 
                                               FontSize="16"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="⏳"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="Text" Value="✅"/>
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding HasError}" Value="True">
                                                        <Setter Property="Text" Value="❌"/>
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
